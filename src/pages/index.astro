---
import Textimg from "../components/Textimg.astro";
import Layout from "../layouts/Layout.astro";
---
<Layout>
    <div class="Container">
        <h1 class="Main-title">Convierte el silencio en sonido</h1>
        <img src="Eguitarbg.jpg" alt="">
    </div>

    <div class="Second-container">
        <h2 class="Subtitle">Instrumentos de Calidad para Cada Músico</h2>
        <div class="Image_container">
            <div>
                <p>Teclados</p>
                <img src="Keyboard.jpg" />
            </div>
            <div>
                <img src="Drums.jpg" />
                <p>Baterias</p>
            </div>
            <div>
                <p>Guitarras</p>
                <img src="Eguitar2.jpg" />
            </div>
        </div>
    </div>

    <div class="Store">
        <div class="Texts_cont">
            <h2>Explora Nuestra Colección</h2>
            <h3>Echa un vistazo a la tienda</h3>
        </div>
        <div class="Store">
            <div class="car">
                <img src="Drums2.webp" alt="">
                <img src="Amp.webp" alt="">
                <img src="bass.webp" alt="">
                <img src="Ramp.jpg" alt="">
                <img src="keyb.webp" alt="">
                <img src="Drums2.webp" alt="">
                <img src="Amp.webp" alt="">
                <img src="bass.webp" alt="">
                <img src="Ramp.jpg" alt="">
                <img src="keyb.webp" alt="">    
            </div>
        </div>
    </div>

    <div class="Bg_container">
        <h1>Forma parte de Nuestra Familia</h1>
        <h2>+50.000 Miembros</h2>
    </div>

    <div>
        <h3>Visitanos</h3>
        <div>
            <img src="" alt="">
            <img src="" alt="">
            <img src="" alt="">
        </div>
    </div>

</Layout>

<style>
    .Container {
        position: relative;
        overflow: hidden;
        height: 800px;
        background-color: black;
        z-index: -100;

    }
    .Container h1 {
        color: aliceblue;
        font-size: 54px;
        font-weight: 700;
        position: absolute;
        bottom: 0;
        padding-left: 20px;
        padding-bottom: 2.5%;
    }

    .Container img {
        position: absolute;
        z-index: -99;
        width: 100%;
        object-fit: cover;
    }
        
    .Image_container {
        display: flex;
        justify-content: space-between;
        gap: 55px;
        background-color: #020E26;
        padding: 0px 5%;
    }

    .Second-container {
        background-color: #020E26;
    }

    .Subtitle {
        font-size: 36px;
        color: white;
        font-weight: 700;
        padding-left: 10px;
    }

    .Image_container p {
        color: white;
        font-size: 32px;
        font-weight: 600;
    }

    .Image_container div {
        padding: 10px;
    }

    .Store {
        display: flex;
        justify-content: space-between;
        width: 100%;
        overflow: hidden;
        position: relative;
    }

    .car {
        display: flex;
        width: calc(200%);
        animation: scroll 60s linear infinite;
    }

    .car img {
        width: 300px;
        height: auto;
        flex-shrink: 0;
        margin-right: 10px;
    }

    @keyframes scroll {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }

    .Store img {
        height: 300px;
        padding: 10px;
    }

    .Texts_cont h2 {
        font-size: 36px;
        font-weight: 600;
        padding: 20px 20px;
    }

    .Texts_cont h3 {
        font-size: 16px;
        font-weight: 600;
        padding: 20px 20px;
    }

    .Bg_container {
        background-image: url("Hands.jpg");
        width: 100%;
        background-size: cover;
        height: 800px;
    }

    .Bg_container h1 {
        color: white;
        font-size: 56px;
        font-weight: 700;
        padding-top: 100px;
        padding-left: 30px;
    }

    .Bg_container h2 {
        color: white;
        font-size: 36px;
        font-weight: 700;
        padding-left: 30px;

    }

</style>
