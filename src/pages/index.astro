---
import Textimg from "../components/Textimg.astro";
import Layout from "../layouts/Layout.astro";
---
<Layout>
    <div class="Container">
        <h1 class="Main-title">Convierte el silencio en sonido</h1>
        <img src="Eguitarbg.jpg" alt="">
    </div>

    <div class="Second-container">
        <h2 class="Subtitle">Instrumentos de Calidad para Cada Músico</h2>
        <div class="Image_container">
            <div>
                <p>Teclados</p>
                <img src="Keyboard.jpg" />
            </div>
            <div>
                <img src="Drums.jpg" />
                <p>Baterias</p>
            </div>
            <div>
                <p>Guitarras</p>
                <img src="Eguitar2.jpg" />
            </div>
        </div>
    </div>

    <div class="Store">
        <h2>Explora Nuestra Colección</h2>
        <div class="Store">
            <img src="Eguitar.avif" alt="">
            <img src="Drums2.webp" alt="">
            <img src="Amp.webp" alt="">
        </div>
    </div>

    <div class="Bg_container">
        <h1>Forma parte de Nuestra Familia</h1>
        <h2>+50.000 Miembros</h2>
    </div>

    <div>
        <h3>Visitanos</h3>
        <div>
            <img src="" alt="">
            <img src="" alt="">
            <img src="" alt="">
        </div>
    </div>

</Layout>

<style>
    .Container {
        position: relative;
        overflow: hidden;
        height: 800px;
        background-color: black;
        z-index: -100;

    }
    .Container h1 {
        color: aliceblue;
        font-size: 54px;
        font-weight: 700;
        position: absolute;
        bottom: 0;
        padding-left: 20px;
        padding-bottom: 2.5%;
    }

    .Container img {
        position: absolute;
        z-index: -99;
        width: 100%;
        object-fit: cover;

    }
        
    .Image_container {
        display: flex;
        justify-content: space-between;
        gap: 55px;
        padding: 10px;
        background-color: #020E26;
        padding: 0px 5%;
    }

    .Second-container {
        background-color: #020E26;
    }

    .Subtitle {
        font-size: 36px;
        color: white;
        font-weight: 600;
        padding-left: 10px;
    }

    .Image_container p {
        color: white;
        font-size: 32px;
        font-weight: 600;
    }

    .Image_container div {
        padding: 10px;
    }

    .Store {
        display: flex;
        justify-content: space-between;
    }

    .Store img {
        height: 300px;
    }

    .Bg_container {
        background-image: url("Hands.jpg");
        width: 100%;
        background-size: cover;
        height: 800px;
    }

</style>
