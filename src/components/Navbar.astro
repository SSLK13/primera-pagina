---
import { Icon } from "astro-icon/components"
---

<header>
    <nav id="main">
        <div>
            <a href="/">
                <h1>CM</h1>
            </a>
        </div>    
        <div>
            <ul>
                <li><a href="/">Inicio</a></li>
                <li><a href="/shop">Tienda</a></li>
                <li><a href="/about-us">Sobre Nosotros</a></li>
            </ul>
        </div>

        <div class="Buttons">
            <a href="/#location">
                <Icon name={"map-pin"} size={"36px"} class={"Icon"}/>
            </a>
        </div>
        
