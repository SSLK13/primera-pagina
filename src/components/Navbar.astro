<style>

    ul {
        display: flex;
        gap: 16px;
    }

    nav {
    display: flex;
    gap: 16px;
    justify-content: space-between;
    align-items:center;
    padding: 10px;
    background-color: rgb(246, 246, 246);
    }

    h1 {
        padding-left: 20px;
        font-size: 52px;
        font-weight: 600;
        font-family: Georgia, 'Times New Roman', Times, serif;
    }

    .Buttons {
        padding-right: 20px;
    }

    li a {
        font-size: 22px;
    }

    .Icon:hover {
        opacity: .5;
        transition: all .3s ease;
    }

</style>